%p{id: "notice"}= notice

%h1 Entries

%table
  %thead
    %tr
      %th Title
      %th Body
      %th{colspan: "3"}

  %tbody
    - @entries.each do |entry|
      %tr
        %td= entry.title
        %td= entry.body
        %td= link_to 'Show', blog_entry_path(entry.blog_id, entry)
        %td= link_to 'Edit', edit_entry_path(entry)
        %td= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Blog Entry', new_blog_entry_path(@entries.first.blog_id)
